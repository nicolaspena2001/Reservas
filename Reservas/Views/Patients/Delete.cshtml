@model Reservas.Models.Patient

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro de que querés eliminar este paciente?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.Document</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Nacimiento</dt>
        <dd class="col-sm-10">@Model.BirthDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>