@model Reservas.Models.Doctor

@{
    ViewData["Title"] = "Eliminar Médico";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro de que querés eliminar este médico?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Consultorio</dt>
        <dd class="col-sm-10">@Model.Office</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>