<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservas Médicas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Reservas Médicas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Patients" asp-action="Index">👤 Pacientes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Doctors" asp-action="Index">🩺 Médicos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Create">🗓️ Nueva Cita</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Index">📋 Historial</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="border-top text-muted text-center py-3 mt-5">
        <div class="container">
            &copy; @DateTime.Now.Year - Reservas Médicas - Desarrollado por Nelson
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
